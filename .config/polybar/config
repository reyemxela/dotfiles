[colors]
    background  = ${xrdb:alphabg}
    foreground  = ${xrdb:color7}
    

[bar/base]
    inherit = colors

    width       = 100%
    height      = 22
    fixed-center = true

    bottom      = false

    ;font-0      = "Hack Nerd Font:size=11;2"
    font-0      = "Roboto:style=Medium:size=11;2"
    font-1      = "RobotoMono Nerd Font:size=11;2"
    padding-left = 0
    padding-right = 1

    module-margin-left = 2
    module-margin-right = 2

    border-color   = #60ffffff
    border-size = 0

    ;fake width/offset
    border-left-size = 30
    border-right-size = 30
    border-right-color   = #00000000
    border-left-color   = #00000000


    separator   = "  "

    tray-position = right

    modules-left  = i3
    modules-center = xwindow
    modules-right = pulseaudio battery network date

[module/date]
    type = internal/date
    interval = 1

    time = "%H:%M:%S"

    date = "%Y-%m-%d "

    label = %date% %time%

[module/i3]
    type    = internal/i3
    pin-workspaces  = true
    strip-wsnumbers = true
    index-sort      = true

    format = <label-state>

    label-focused = %index%
    label-focused-foreground = ${colors.background}
    label-focused-background = ${colors.foreground}
    label-focused-padding = 1

    label-unfocused = %index%
    label-unfocused-padding = 1

[module/xwindow]
    type = internal/xwindow
    label = %title:0:40:...%

[module/filesystem]
    type = internal/fs
    interval = 25

    mount-0 = /

    label-mounted = %mountpoint%: %percentage_used%%

[module/network]
    type            = internal/network
    interface       = wlp4s0
    interval        = 3
    format-connected    = <label-connected>
    format-disconnected = <label-disconnected>

    label-connected     = 直 %essid%
    label-disconnected  = 睊 not connected

[module/pulseaudio]
    type = internal/pulseaudio
    format-volume   = <ramp-volume> <label-volume>
    label-volume    = %percentage:3%%
    label-muted     = ﱝ Mute

    ramp-volume-0   = 奄
    ramp-volume-1   = 奔
    ramp-volume-2   = 墳


[module/backlight]
    type    = internal/xbacklight

[module/battery]
    type = internal/battery
    battery = BAT0
    adapter = AC
    full-at = 98

    label-full =  %percentage:3%%
    format-charging = <animation-charging> <label-charging>
    format-discharging = <ramp-capacity> <label-discharging>
    
    label-charging = %percentage:3%%
    label-discharging = %percentage:3%%

    ramp-capacity-0 = 
    ramp-capacity-1 = 
    ramp-capacity-2 = 
    ramp-capacity-3 = 
    ramp-capacity-4 = 
    ramp-capacity-5 = 
    ramp-capacity-6 = 
    ramp-capacity-7 = 
    ramp-capacity-8 = 
    ramp-capacity-9 = 


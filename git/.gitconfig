[init]
  defaultBranch = main

[alias]
  s = "status -s -b"
  cm = "commit"
  cmm = "commit -m"
  b = "branch -a -vv"
  c = "checkout"
  cb = "checkout -b" # new branch
  rv = "remote -v"
  dh = "diff HEAD" # all changes
  ds = "diff --staged" # staged changes
  lg = "log --graph --decorate --oneline"
  lp = "log -p" # log diff
  lt = "log --simplify-by-decoration --oneline" # tags
  root="! cd $(git rev-parse --show-toplevel)" # go to root
  exec = "! exec " # run from root
  undo = "reset --soft HEAD~"
  repo = "! xdg-open $(git remote get-url origin)"

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  localBranch = yellow reverse
  remoteBranch = green
  added = yellow
  changed = red
  untracked = white dim

[commit]
  template = ~/.gitmessage

[user]
  name = Alex Meyer
  email = alexwreyem@gmail.com

[credential]
  helper = store

[credential "https://github.com"]
  helper =
  helper = "!/usr/bin/gh auth git-credential 2>/dev/null"
  helper = store

[credential "https://gist.github.com"]
  helper =
  helper = "!/usr/bin/gh auth git-credential 2>/dev/null"
  helper = store

[include]
  path = ~/.gitconfig_local

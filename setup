#!/bin/bash

function confirm {
  read -p "$1 [Y/n]: " conf
  [[ ! ${conf,,} =~ ^n ]]
}


ln -sf "$PWD/.bashrc" "$HOME/.bashrc"
ln -sf "$PWD/.profile" "$HOME/.profile"
ln -sf "$PWD/.zshrc" "$HOME/.zshrc"

mkdir -p "$HOME/.local/bin"
ln -sfn "$PWD/scripts" "$HOME/.local/bin/scripts"

for i in vim tmux git sudo konsole alacritty termux; do
  if confirm "Set up ${i} config?"$'\t'; then
    cd $i && ./setup
    cd - &>/dev/null
  fi
done

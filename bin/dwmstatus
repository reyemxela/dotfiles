#!/bin/bash

loop=0
while true; do
    [[ $(($loop % 10)) -eq 0 ]] && bat="`cat /sys/class/power_supply/BAT0/capacity`%"
    [[ $(($loop % 5)) -eq 0 ]] && ip="`ip a show dev wlp4s0 |grep 'inet ' |cut -d '/' -f1 |cut -d ' ' -f 6`"

    date="`date +'%a, %b %d %Y %H:%M:%S'`"

    xsetroot -name " $bat  $ip  $date"

    loop=$(($loop + 1))
    [[ $loop -eq 600 ]] && loop=0
    sleep 1
done


#red     
#yellow  
#green   
#cyan    
#gray    	
